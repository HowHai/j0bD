<!-- SEARCH BAR -->
<div class="search-container">
  <div id="search">
    <%= form_tag "/", method: "post" do %>
    <%= text_field_tag :search_candidate, params[:search_candidate], placeholder: "Search" %>
    <%= submit_tag "Search", class:"btn btn-default btn-sm" %>
    <% end %>
  </div>
</div>

<div class="section"><%= link_to "Home", "/employers", :style=>'color:#FFFFFF;' %></div>
<div class="section"><%= link_to "Favorites", "/employers/favoritelist", :style=>'color:#FFFFFF;' %></div>
<div class="section"><%= link_to "Settings", "/employees/:id/edit", :style=>'color:#FFFFFF;' %></div>
<div class="section"><%= link_to "Log out", "/signout", method: :delete, :style=>'color:#FFFFFF;' %></div>
